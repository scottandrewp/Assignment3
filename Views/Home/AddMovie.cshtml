@{
    ViewBag.Title = "Add a Movie";
}

@model Assignment3.Models.Movie
<div>
    <form asp-action="AddMovie" method="post">
        <label asp-for="Category">Category</label>
        <input asp-for="Category" />
        <br />

        <label asp-for="Title">Title</label>
        <input asp-for="Title" />
        <br />

        <label asp-for="Year">Year</label>
        <input asp-for="Year" />
        <br />

        <label asp-for="Director">Director</label>
        <input asp-for="Director" />
        <br />

        <label asp-for="Rating"></label>
        <select asp-for="Rating">
            <option value="">Select One</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
            <option value="UR">UR</option>
        </select>
        <br />

        <label asp-for="Edited">Edited?</label>
        <select asp-for="Edited">
            <option value="">Select One</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <br />

        <label asp-for="LentTo">Lent To:</label>
        <input asp-for="LentTo" />
        <br />

        <label asp-for="Notes">Notes</label>
        <textarea asp-for="Notes">Enter notes here...</textarea>
        <br />

        <input type="submit" value="Add Movie" />
        <div asp-validation-summary="All"></div>


    </form>
    <div>
        <p>Check out the movie <a asp-controller="Home" asp-action="MovieList">collection</a>.</p>
    </div>
</div>
